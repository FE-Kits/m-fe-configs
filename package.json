{
  "name": "@wx-fc/configs",
  "version": "0.0.0",
  "description": "Shareable Configurations for all micro-frontend projects.",
  "repository": "https://github.com/wx-chevalier/m-fe-configs",
  "author": "wx-chevalier",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "DEBUG=r:* rollup -c",
    "check": "run-p check:*",
    "check:eslint": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "check:stylelint": "stylelint-config-prettier-check",
    "check:tslint": "tslint-config-prettier-check ./tslint.json",
    "dev": "DEBUG=r:* r -i $PWD/packages/rollup-config/config -w",
    "lint": "run-p lint:**",
    "lint:es": "eslint . --ext js,jsx,md,mdx,ts,tsx,vue -f friendly",
    "lint:style:css": "stylelint --config stylelint.common.js tests/*.{css,less}",
    "lint:style:scss": "stylelint tests/*.{scss,vue}",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc",
    "test": "jest"
  },
  "dependencies": {
    "@wx-fc/app-config": "^0.1.27"
  },
  "devDependencies": {
    "@angular/core": "^8.2.8",
    "@babel/core": "^7.6.2",
    "@commitlint/cli": "^8.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@types/react": "^16.9.3",
    "@types/unist": "^2.0.3",
    "browserslist": "^4.7.0",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.18",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "rollup": "^1.21.4",
    "stylelint": "^11.0.0",
    "ts-jest": "^24.1.0",
    "tslib": "^1.10.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "vue": "^2.6.10",
    "webpack": "^4.41.0"
  },
  "browserslist": [
    "extends @wx-fc/browserslist-config/modern"
  ],
  "commitlint": {
    "extends": [
      "@wx-fc"
    ]
  },
  "prettier": "@wx-fc/prettier-config/semi",
  "remarkConfig": {
    "plugins": [
      "@wx-fc/remark-config"
    ]
  },
  "stylelint": {
    "extends": [
      "@wx-fc/stylelint-config",
      "@wx-fc/stylelint-config/modules"
    ],
    "rules": {
      "font-family-no-missing-generic-family-keyword": null,
      "no-descending-specificity": null,
      "plugin/no-unsupported-browser-features": null,
      "plugin/no-low-performance-animation-properties": null
    }
  }
}
